title			=	Perl Module
description		=	Handle Perl5 + Perl6 modules

# Action Handlers specific to Perl5
[E]dit			=	Goo::Thing::pm::Editor.pm
[P]rofile		=	Goo::Thing::pm::Profiler.pm
[R]un			=	Goo::Thing::pm::Runner.pm
Comp[I]le		=	Goo::Thing::pm::Compiler.pm
[D]elete		=	Goo::FileThing::Deleter.pm

# these action handlers can come out in a later release
# not for version 0.1
#[M]ake			=	Goo::Thing::pm::Maker.pm
